{
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
        ".ts"
    ],
    "all": true,
    "include": [
        "src/**/*.ts"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
        "lcov", "text"
    ],
    "require": [
        "ts-node/register",
        "tsconfig-paths/register",
        "source-map-support/register"
    ]
}
