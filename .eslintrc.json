{
    "extends": [
        "eslint-config-standard"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint/eslint-plugin"
    ],
    "env": {
        "node": true
    },
    "globals": {
        "BigInt": false
    },
    "rules": {
        "no-unused-vars": "off",
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "camelcase": "off",
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    },
    "overrides" : [
        {
            "files": ["test/**/*.ts"],
            "env": {
                "mocha": true
            }
        }
    ]
}
