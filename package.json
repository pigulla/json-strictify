{
  "name": "json-strictify",
  "version": "8.0.2",
  "description": "Safely serialize a value to JSON without unintended loss of data or going into an infinite loop due to circular references.",
  "engines": {
    "node": ">=14"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/*.tsbuildinfo",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "rm -rf coverage && npm run lint && npm run jest && npm audit",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --ext=ts --fix .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier && npm run lint:lockfile",
    "lint:eslint": "eslint --max-warnings=0 --ext=ts .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "jest": "rm -rf coverage && jest",
    "prepublishOnly": "npm ci && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pigulla/json-strictify.git"
  },
  "keywords": [
    "JSON",
    "debugging",
    "validation",
    "stringify",
    "strict"
  ],
  "author": {
    "name": "Raphael Pigulla",
    "email": "pigulla@four66.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pigulla/json-strictify/issues"
  },
  "homepage": "https://github.com/pigulla/json-strictify",
  "dependencies": {
    "json-pointer": "0.6.2",
    "ts-custom-error": "3.3.1",
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.11",
    "@types/jest": "29.5.12",
    "@types/json-pointer": "1.0.34",
    "@types/lodash.noop": "3.0.9",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "chai": "4.4.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unicorn": "51.0.1",
    "jest": "29.7.0",
    "lockfile-lint": "4.13.1",
    "lodash.noop": "3.0.1",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.10.2"
  }
}
