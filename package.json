{
  "name": "json-strictify",
  "version": "8.0.0",
  "description": "Safely serialize a value to JSON without unintended loss of data or going into an infinite loop due to circular references.",
  "engines": {
    "node": ">=14"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/*.tsbuildinfo",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "rm -rf coverage && npm run lint && npm run jest && npm audit",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --ext=ts --fix .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier && npm run lint:lockfile",
    "lint:eslint": "eslint --max-warnings=0 --ext=ts .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "jest": "rm -rf coverage && jest",
    "prepublishOnly": "npm ci && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pigulla/json-strictify.git"
  },
  "keywords": [
    "JSON",
    "debugging",
    "validation",
    "stringify",
    "strict"
  ],
  "author": {
    "name": "Raphael Pigulla",
    "email": "pigulla@four66.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pigulla/json-strictify/issues"
  },
  "homepage": "https://github.com/pigulla/json-strictify",
  "dependencies": {
    "json-pointer": "^0.6.1",
    "ts-custom-error": "^3.2.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/jest": "^29.2.5",
    "@types/json-pointer": "^1.0.30",
    "@types/lodash.noop": "^3.0.6",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chai": "^4.3.4",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "jest": "^29.3.1",
    "lockfile-lint": "^4.7.4",
    "lodash.noop": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "type-fest": "^3.0.0",
    "typescript": "^5.0.3"
  }
}
