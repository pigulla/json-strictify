{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es2016",
        "allowJs": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@src": ["src/index.ts"],
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
