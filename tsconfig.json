{
    "compilerOptions": {
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es2020",
        "allowJs": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts"
    ]
}
