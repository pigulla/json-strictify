{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es2016",
        "allowJs": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*"
    ]
}
