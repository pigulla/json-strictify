{
    "extends": "../tsconfig.json",
    "include": ["../src/**/*.ts", "../test/**/*.ts"],
    "compilerOptions": {
        "types": ["node", "jest"],
        "rootDir": "..",
        "noPropertyAccessFromIndexSignature": false,
        "paths": {
            "~src": ["src/index.ts"],
            "~src/*": ["src/*"],
            "~test": ["test/index.ts"],
            "~test/*": ["test/*"]
        }
    }
}
